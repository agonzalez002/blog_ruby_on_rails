<header>
  <div class="name">
    <h1>DAWIN Alt - Le Blog</h1>
    <h2>GONZALEZ Alexandre</h2>
  </div>

  <div class="log">
    <p>
      <% if user_signed_in? %>
        Hello <strong><%= current_user.first_name %></strong>.
        <%= link_to 'My profile', current_user, :class => 'navbar-link' %> |
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path, :class => 'navbar-link' %> |
        <%= link_to 'Login', new_user_session_path, :class => 'navbar-link' %>
      <% end %>
    </p>
  </div>
  
</header>

<div class="band">
  <%= image_tag("bannierereseau4.jpg", :alt => "banniere reseau") %>
</div>


<div class="breadcump">
	<p><%= link_to "All posts", posts_path %> / <%= @post.title %></p>
</div>

<div class="show-post">
	<div class="picture">
		<img src="<%= @post.file.big.url %>" alt="<%= @post.title %>"/>
	</div>

	<div class='title'>
		<p><%= @post.title %> - <%= @post.date_of_publication.strftime('%d/%m/%Y') %></p>
	</div>

	<p class='post-head'><%= @post.body %></p>

	<p class="author">Author : <%= link_to user_path(@post.user) do %><%= @post.user.first_name %><% end %></p>

	<div class="liens">
		<% if current_user %>
			<% if (current_user.id == @post.user_id) %>
				<%= link_to edit_user_post_path(@post.user_id, @post.id) do %>
					<%= image_tag("edit.png", :alt => "edit", :class => "edit") %>				
				<% end %>
				<%= link_to image_tag("delete.png", :alt => "delete", :class => "delete"), @post, method: :delete, data: {confirm: "Are you sure ?"} %>
			<% end %>
		<% end %>
	</div>
</div>

<footer>
	<div class="txt">
		<p>Project of Ruby On Rails.</p>
		<p>Property of Alexandre GONZALEZ</p>
	</div>
	

	<div class="logo">
		<%= image_tag("iut.png", :alt => "Logo IUT de Bordeaux", :class => "iut") %>
		<%= image_tag("Ruby.png", :alt => "Logo Ruby on Rail", :class => "ruby") %>	
	</div>

</footer>






